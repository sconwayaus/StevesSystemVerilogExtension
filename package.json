{
	"name": "steves-system-verilog-extension",
	"description": "My System Verilog Extension",
	"author": "Steve Conway",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/sconwayaus/mySystemVerilogExtension"
	},
	"publisher": "SteveCreations",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.88.1"
	},
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "systemverilog",
				"extensions": [
					".sv"
				],
				"aliases": [
					"SystemVerilog",
					"systemverilog",
					"System Verilog",
					"Systemverilog"
				],
				"configuration": "./configs/systemVerilog.json",
				"icon": {
					"light": "./resources/sv_light.svg",
					"dark": "./resources/sv_dark.svg"
				}
			},
			{
				"id": "systemverilogheader",
				"aliases": [
					"SystemVerilog",
					"systemverilog",
					"System Verilog",
					"Systemverilog"
				],
				"extensions": [
					".svh"
				],
				"configuration": "./configs/systemVerilog.json",
				"icon": {
					"light": "./resources/svh_light.svg",
					"dark": "./resources/svh_dark.svg"
				}
			},
			{
				"id": "verilog",
				"aliases": [
					"Verilog",
					"verilog"
				],
				"extensions": [
					".v"
				],
				"configuration": "./configs/systemVerilog.json",
				"icon": {
					"light": "./resources/v_light.svg",
					"dark": "./resources/v_dark.svg"
				}
			},
			{
				"id": "verilogheader",
				"aliases": [
					"Verilog",
					"verilog"
				],
				"extensions": [
					".vh"
				],
				"configuration": "./configs/systemVerilog.json",
				"icon": {
					"light": "./resources/vh_light.svg",
					"dark": "./resources/vh_dark.svg"
				}
			},
			{
				"id": "verilog-filelist",
				"aliases": [
					"Verilog Filelist",
					"verilog-filelist",
					"Dot-F File"
				],
				"extensions": [
					".f"
				],
				"configuration": "./configs/verilogFileList.json",
				"icon": {
					"light": "./resources/f_light.svg",
					"dark": "./resources/f_dark.svg"
				}
			},
			{
				"id": "sdc",
				"aliases": [
					"Synopsys Design Constraints"
				],
				"extensions": [
					".sdc"
				],
				"configuration": "./configs/sdc.json",
				"icon": {
					"light": "./resources/sdc_light.svg",
					"dark": "./resources/sdc_dark.svg"
				}
			},
			{
				"id": "xdc",
				"aliases": [
					"Xilinx Design Constraints"
				],
				"extensions": [
					".xdc"
				],
				"configuration": "./configs/sdc.json",
				"icon": {
					"light": "./resources/sdc_light.svg",
					"dark": "./resources/sdc_dark.svg"
				}
			},
			{
				"id": "qip",
				"aliases": [
					"Quartus IP File"
				],
				"extensions": [
					".qip"
				],
				"configuration": "./configs/sdc.json",
				"icon": {
					"light": "./resources/sdc_light.svg",
					"dark": "./resources/sdc_dark.svg"
				}
			},
			{
				"id": "qsf",
				"aliases": [
					"Quartus Settings File"
				],
				"extensions": [
					".qsf"
				],
				"configuration": "./configs/sdc.json",
				"icon": {
					"light": "./resources/sdc_light.svg",
					"dark": "./resources/sdc_dark.svg"
				}
			},
			{
				"id": "tcl",
				"aliases": [
					"Tool Command Language"
				],
				"extensions": [
					".tcl"
				],
				"configuration": "./configs/sdc.json",
				"icon": {
					"light": "./resources/sdc_light.svg",
					"dark": "./resources/sdc_dark.svg"
				}
			}
		],
		"snippets": [
			{
				"language": "systemverilog",
				"path": "./snippets/systemverilog.json"
			},
			{
				"language": "verilog",
				"path": "./snippets/systemverilog.json"
			},
			{
				"language": "systemverilogheader",
				"path": "./snippets/systemverilog.json"
			},
			{
				"language": "verilogheader",
				"path": "./snippets/systemverilog.json"
			}
		],
		"grammars": [
			{
				"language": "systemverilog",
				"scopeName": "source.systemverilog",
				"path": "./syntaxes/systemverilog.tmLanguage.json"
			},
			{
				"language": "verilog",
				"scopeName": "source.systemverilog",
				"path": "./syntaxes/systemverilog.tmLanguage.json"
			},
			{
				"language": "systemverilogheader",
				"scopeName": "source.systemverilog",
				"path": "./syntaxes/systemverilog.tmLanguage.json"
			},
			{
				"language": "verilogheader",
				"scopeName": "source.systemverilog",
				"path": "./syntaxes/systemverilog.tmLanguage.json"
			},
			{
				"language": "verilog-filelist",
				"scopeName": "source.verilog-filelist",
				"path": "./syntaxes/verilog-filelist.json"
			},
			{
				"language": "sdc",
				"scopeName": "source.sdc",
				"path": "./syntaxes/sdc.json"
			},
			{
				"language": "xdc",
				"scopeName": "source.sdc",
				"path": "./syntaxes/sdc.json"
			},
			{
				"language": "qip",
				"scopeName": "source.sdc",
				"path": "./syntaxes/sdc.json"
			},
			{
				"language": "qsf",
				"scopeName": "source.sdc",
				"path": "./syntaxes/qsf.json"
			},
			{
				"language": "tcl",
				"scopeName": "source.tcl",
				"path": "./syntaxes/tcl/tcl.tmLanguage.json"
			}
		],
		"activationEvents": [
			"onLanguage:systemverilog",
			"onLanguage:verilog",
			"onLanguage:systemverilogheader",
			"onLanguage:verilogheader",
			"onLanguage:systemverilog",
			"onLanguage:verilog",
			"onLanguage:systemverilogheader",
			"onLanguage:verilogheader",
			"onLanguage:verilog-filelist",
			"onLanguage:sdc",
			"onLanguage:xdc",
			"onLanguage:qip",
			"onLanguage:qsf",
			"onLanguage:tcl"
		],
		"configuration": {
			"type": "object",
			"title": "My System Verilog Extension",
			"properties": {
				"mySystemVerilogExtension.languageServer.path": {
					"type": "string",
					"default": "./bin/verible-verilog-ls",
					"scope": "machine-overridable",
					"description": "The path to verible-verilog-ls executable, e.g.: /usr/bin/verible-verilog-ls.",
					"order": 0
				},
				"mySystemVerilogExtension.languageServer.rules_config": {
					"type": "string",
					"default": "./bin/.rules.verible_lint",
					"items": {
						"type": "string"
					},
					"description": "Verible rules config file path (default: './bin/.rules.verible_lint')",
					"order": 1
				},
				"mySystemVerilogExtension.languageServer.arguments": {
					"type": "array",
					"default": [],
					"items": {
						"type": "string"
					},
					"description": "Arguments for verible-verilog-ls server.",
					"order": 1
				},
				"mySystemVerilogExtension.projectFileList.includeGlobPattern": {
					"type": "string",
					"default": "{**/*.sv,**/.*v,**/*.svh}",
					"scope": "machine-overridable",
					"description": "Include glob pattern creating verible.filelist.",
					"order": 2
				},
				"mySystemVerilogExtension.projectFileList.excludeGlobPattern": {
					"type": "string",
					"default": "{**/db/,**/incremental_db/,**/output/}",
					"scope": "machine-overridable",
					"description": "Exclude glob pattern creating verible.filelist.",
					"order": 3
				}
			}
		},
		"commands": [
			{
				"command": "mySystemVerilogExtension.createProjectFileList",
				"title": "mySystemVerilogExtension: Create Project File List (verible.filelist)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"esbuild": "^0.21.2",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
	}
}